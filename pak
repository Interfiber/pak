if [ -z "$PAK_DIR" ]; then
  echo "Error: PAK_DIR is not set! Please set this varible and continue"
  exit 1
fi
export LUA=$(which lua)
if [ -f "/Library/Application\ Support/pak/has_pak_lua" ]; then
  export LUA=/Users/Shared/pak_lua/bin/lua
fi
export ORIGINAL=$($LUA -e "print(package.path)")
export LUA_PATH="$ORIGINAL;$PAK_DIR/?.lua"
$LUA $PAK_DIR/pak.lua $@
